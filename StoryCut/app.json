{
  "expo": {
    "name": "StoryCut",
    "slug": "StoryCut",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.StoryCut",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "UIFileSharingEnabled": true,
        "LSSupportsOpeningDocumentsInPlace": true,
        "NSDocumentsFolderUsageDescription": "Video ve veritabanı dosyalarını kaydetmek için belge klasörüne erişim gerekiyor",
        "NSPhotoLibraryUsageDescription": "Video ve thumbnail kaydetmek için fotoğraf kitaplığına erişim gerekiyor",
        "NSPhotoLibraryAddUsageDescription": "Video ve thumbnail kaydetmek için fotoğraf kitaplığına erişim gerekiyor"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-file-system",
        {
          "ios": {
            "usesIcloudStorage": true
          }
        }
      ],
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ]
    ]
  }
}
